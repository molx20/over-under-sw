{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/games.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/predict.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/feedback.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/games",
      "destination": "/api/games.py"
    },
    {
      "source": "/api/game_detail",
      "destination": "/api/games.py"
    },
    {
      "source": "/api/predict",
      "destination": "/api/predict.py"
    },
    {
      "source": "/api/feedback",
      "destination": "/api/feedback.py"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
