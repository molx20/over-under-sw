{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/games.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/games",
      "destination": "/api/games.py"
    },
    {
      "source": "/api/game_detail",
      "destination": "/api/games.py"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
